    <select id="boardTotal" parameterType="Integer" resultType="Integer">
		  SELECT
		      	COUNT(*) AS TOTAL_CNT
			FROM
				BOARD	
    </select>
    	
    <select id="boardView" parameterType="com.spring.board.vo.BoardVo" resultMap="boardVo">
    	SELECT
        	BOARD_TYPE
			,BOARD_NUM
			,BOARD_TITLE
			,BOARD_COMMENT
		FROM
			BOARD
    	WHERE 	BOARD_TYPE = #{boardType}
    	AND 	BOARD_NUM  = #{boardNum}
    </select>	
    
    <select id="boardInsert" parameterType="com.spring.board.vo.BoardVo">
    	INSERT INTO 
        BOARD
        (BOARD_TYPE
        ,BOARD_NUM
        ,BOARD_TITLE
        ,BOARD_COMMENT
        ,CREATOR
        ,CREATE_TIME
        ,MODIFIER
        ,MODIFIED_TIME
        )
        VALUES
        (#{boardType}
        ,(SELECT NVL(MAX(BOARD_NUM)+1,1)
	    FROM BOARD
	    WHERE BOARD_TYPE = #{boardType})
        ,#{boardTitle}
        ,#{boardComment}
        ,'SYSTEM'
        ,TO_CHAR(SYSDATE)
        ,'SYSTEM'
        ,TO_CHAR(SYSDATE)
        )
    </select> 
    
    <update id="boardUpdate">
    	update BOARD set 
	    	BOARD_TITLE = #{boardTitle}
	    	,BOARD_COMMENT = #{boardComment}
    	WHERE BOARD_TYPE = #{boardType} 
    	and BOARD_NUM = #{boardNum}
    </update>
    
    <delete id="boardDelete">
    	delete 
    	from BOARD 
    	where BOARD_TYPE = #{boardType}
    	and BOARD_NUM = #{boardNum}
    </delete>
    
    <select id="deleteCheck" resultType="Integer">
    	select count(*) 
    	from BOARD 
    	where BOARD_TYPE = #{boardType} 
    	and BOARD_NUM = #{boardNum}
    </select>
    
    <select id="boardType" parameterType="com.spring.board.vo.ComCodeVO" resultMap="ComCodeVO">
        SELECT CODE_TYPE,CODE_ID,CODE_NAME 
        FROM COM_CODE 
        WHERE CODE_TYPE = 'menu'
    </select>
    
     <select id="getCodeName" parameterType="com.spring.board.vo.ComCodeVO" resultMap="ComCodeVO">
        SELECT CODE_NAME 
        FROM COM_CODE 
        WHERE CODE_ID = #{codeId}
    </select>
    
