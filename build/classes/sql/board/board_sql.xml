    <select id="boardList" parameterType="com.spring.board.vo.PageVo" resultMap="boardVo">
        SELECT 
		  BOARD_TYPE
		  ,BOARD_NUM
		  ,BOARD_TITLE
		  ,BOARD_COMMENT
		  ,TOTAL_CNT
		FROM 
		(
		  SELECT
		      	BOARD_TYPE
				,BOARD_NUM
				,BOARD_TITLE
				,BOARD_COMMENT
		      	,ROW_NUMBER() OVER(ORDER BY BOARD_NUM DESC) AS NUMROW
		      	,COUNT(*) OVER() AS TOTAL_CNT
			FROM
				BOARD 
			<if test="searchInput != null and searchInput != ''">
			where BOARD_TITLE like '%'||#{searchInput}||'%' or BOARD_COMMENT like '%'||#{searchInput}||'%'
			</if>
			<if test="hiddenValue != null and hiddenValue != ''">
			where BOARD_TYPE IN
				<foreach collection="hiddenValue" item="arr" open="(" close=")" separator=",">
 					#{arr}
				</foreach>	
			</if>
		)
		<if test="pageNo != null and pageNo != ''">
		WHERE NUMROW BETWEEN (#{pageNo}-1)*10 + 1 AND (#{pageNo})*10 
		</if>
    </select>
    
    <select id="boardTotalOfType" resultType="Integer">
		  SELECT
		      	COUNT(*) AS TOTAL_CNT
			FROM
				BOARD where BOARD_TYPE IN
				<foreach collection="array" item="arr" open="(" close=")" separator=",">
 					#{arr}
				</foreach>		
    </select>
    <select id="boardTotalOfKeyword" resultType="Integer">
		  SELECT
		      	COUNT(*) AS TOTAL_CNT
			FROM
				BOARD 
				where BOARD_TITLE like '%'||#{searchInput}||'%' or BOARD_COMMENT like '%'||#{searchInput}||'%'
