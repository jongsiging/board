<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    
    <resultMap type="com.spring.user.vo.UserVo" id="userVo">
    	<result property="userId" 	column="USER_ID"/>
    	<result property="userPw" 	column="USER_PW"/>
    	<result property="userName" 	column="USER_NAME"/>
    	<result property="userPhone1" 	column="USER_PHONE1"/>
    	<result property="userPhone2" 	column="USER_PHONE2"/>
    	<result property="userPhone3" 	column="USER_PHONE3"/>
    	<result property="userAddr1" 	column="USER_ADDR1"/>
    	<result property="userAddr2" 	column="USER_ADDR2"/>
    	<result property="userCompany" 	column="USER_COMPANY"/>
    	<result property="creator" 	column="CREATOR"/>
    	<result property="createTime" 	column="CREATE_TIME"/>
    	<result property="modifier" 	column="MODIFIER"/>
    	<result property="modifiedTime" 	column="MODIFIED_TIME"/>
    </resultMap>
     <resultMap type="com.spring.board.vo.ComCodeVO" id="ComCodeVO">
    	<result property="codeType" 	column="CODE_TYPE"/>
    	<result property="codeId" 	column="CODE_ID"/>
    	<result property="codeName" 	column="CODE_NAME"/>
    	<result property="creator" column="CREATOR"/>
    	<result property="create_time" column="CREATE_TIME"/>
    	<result property="modeifier" column="MODIFIER"/>
    	<result property="modified_time" column="MODIFIED_TIME"/>
    </resultMap>
    
     <select id="login" parameterType="com.spring.user.vo.UserVo" resultMap="userVo">
        select * from USER_INFO where USER_ID =	#{userId} and USER_PW = #{userPw}
    </select>  
	<select id="userCheck" resultType="Integer">
        select count(*) from USER_INFO where USER_ID = #{userId} and USER_PW = #{userPw}
    </select> 
    <select id="userPhone" parameterType="com.spring.board.vo.ComCodeVO" resultMap="ComCodeVO">
        SELECT CODE_TYPE,CODE_ID,CODE_NAME 
        FROM COM_CODE 
        WHERE CODE_TYPE = 'phone'
    </select>
    <select id="idCheck" resultType="Integer">
        select count(*) from USER_INFO where USER_ID = #{userId}
    </select> 
    <select id="userInsert" parameterType="com.spring.user.vo.UserVo">
        INSERT INTO 
        USER_INFO
        (USER_ID
        ,USER_PW
        ,USER_NAME
        ,USER_PHONE1
        ,USER_PHONE2
        ,USER_PHONE3
        ,USER_ADDR1
        ,USER_ADDR2
        ,USER_COMPANY
        ,CREATOR
        ,CREATE_TIME
        ,MODIFIER
        ,MODIFIED_TIME
        )
        VALUES
        (#{userId}
        ,#{userPw}
        ,#{userName}
        ,#{userPhone1}
        ,#{userPhone2}
        ,#{userPhone3}
        ,#{userAddr1}
        ,#{userAddr2}
        ,#{userCompany}
        ,'SYSTEM'
        ,TO_CHAR(SYSDATE)
        ,'SYSTEM'
        ,TO_CHAR(SYSDATE)
        )
    </select> 
    
</mapper>
